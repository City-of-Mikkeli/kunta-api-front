name: kunta-api-front
version: 0.0.1
summary: Kunta API Front
description: Kunta API Front 
grade: devel
confinement: devmode

apps:
  wildfly:
    command: bin/wrapper
    daemon: forking
    plugs:
      - network
      - network-bind
      - network-observe
      - log-observe
      - process-control
      - system-observe
parts:
  wildfly:
    plugin: dump
    source: http://download.jboss.org/wildfly/10.1.0.Final/wildfly-10.1.0.Final.tar.gz
    stage-packages:
      - openjdk-8-jdk
  local-files:
    plugin: make
    source: .